---
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/playfair-display/700.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-248M4KYE60"></script>
    <script>
      // Ensure TypeScript compatibility
      // @ts-ignore
      window.dataLayer = window.dataLayer || [];
      // @ts-ignore
      function gtag(...args) { window.dataLayer.push(args); }
      gtag('js', new Date());
      gtag('config', 'G-248M4KYE60');
    </script>

    <!-- Usercentrics Consent Banner -->
    <script 
      id="usercentrics-cmp" 
      src="https://app.usercentrics.eu/browser-ui/latest/loader.js" 
      data-settings-id="jV_sYCW3xAAy2L" 
      async>
    </script>

    <meta charset="UTF-8" />
    <meta name="description" content="Erini Hoffman - Designer Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator || 'Astro'} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  body {
    min-height: 100vh;
  }
</style>
