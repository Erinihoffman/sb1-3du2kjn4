---
import Layout from '../layouts/Layout.astro';

const images = [
  '/Image (1).jpg',
  '/Image (2).jpg',
  '/Image (3).jpg',
  '/Image (4).jpg',
  '/Image (5).jpg',
  '/Image (6).jpg',
  '/Image (7).jpg',
  '/Image (8).jpg',
  '/Image (9).jpg',
  '/Image (10).jpg',
];
---

<Layout title="About Erini Hoffman">
  <!-- About Section -->
  <section class="min-h-screen flex items-center pt-20 pb-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="font-display text-4xl md:text-6xl text-primary mb-6">About Me</h1>
          <p class="text-lg mb-8 text-gray-600">
            Hi, Iâ€™m Erini Hoffman, a passionate designer from Sweden. I specialize in creating meaningful digital experiences and have a deep love for design, creativity, and innovation.
          </p>
          <p class="text-lg mb-8 text-gray-600">
            I grew up in a small village in Sweden. My family was not very wealthy, and life was a bit of a struggle. Despite the challenges, I always dreamed big and worked hard. Eventually, I packed my bags and moved to Greece, a journey that changed my life and inspired my creativity.
          </p>
          <div class="space-x-4">
            <a href="https://www.fanvue.com/erini.diary/fv-4" class="inline-block border border-primary text-primary px-6 py-3 rounded hover:bg-primary hover:text-white transition-colors">
              Chat with me here
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-square bg-secondary rounded-full overflow-hidden">
            <img src="/me.jpg" alt="Erini Hoffman" class="w-full h-full object-cover">
          </div>
          <div class="absolute -bottom-8 -left-8 w-40 h-40 bg-accent rounded-full -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-6xl mx-auto px-4 flex items-center gap-12 flex-wrap lg:flex-nowrap">
      <!-- Image Section -->
      <div class="w-full lg:w-1/2 relative group">
        <div class="aspect-square bg-gradient-to-br from-secondary to-accent rounded-lg overflow-hidden shadow-lg transform transition duration-500 group-hover:rotate-3 group-hover:scale-105">
          <img src="/1432.png" alt="Naughty Side" class="w-full h-full object-cover">
        </div>
        <div class="absolute -top-4 -right-4 w-16 h-16 bg-primary rounded-full -z-10 opacity-70 blur-lg"></div>
        <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-accent rounded-full -z-10 opacity-70 blur-lg"></div>
      </div>
  
      <!-- Text Section -->
      <div class="w-full lg:w-1/2 text-center lg:text-right">
        <h2 class="font-display text-5xl lg:text-6xl text-primary mb-6 leading-tight">
          We all have a <span class="text-accent">naughty side.</span>
        </h2>
        <p class="text-gray-600 text-lg lg:text-xl mb-8">
          Embrace it with elegance and boldness. Unleash your confidence like never before.
        </p>
        <a href="https://www.fanvue.com/erini.diary/fv-4" class="inline-block bg-primary text-white px-8 py-4 rounded-lg shadow-md hover:bg-secondary hover:shadow-xl transition duration-300">
          Chat with me
        </a>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-primary">Gallery</h2>
        <p class="text-lg text-gray-600 mt-4">A little bit of me :P</p>
      </div>
      <div class="relative overflow-hidden">
        <div id="gallery" class="flex gap-6 overflow-x-auto scroll-smooth scrollbar-hide">
          {images.map((image, index) => (
            <div
              class="flex-shrink-0 w-80 md:w-[400px] cursor-pointer"
              onclick={`openFullscreen('${image}')`}
            >
              <div class="overflow-hidden rounded-lg shadow-md">
                <img
                  src={image}
                  alt={`Gallery Image ${index + 1}`}
                  class="w-full h-[600px] object-cover transition-transform duration-300 hover:scale-105"
                />
              </div>
            </div>
          ))}
        </div>
        <!-- Navigation Arrows -->
        <button
          class="absolute left-4 top-1/2 -translate-y-1/2 bg-white p-4 rounded-full shadow hover:bg-gray-200 transition z-10"
          onclick="scrollLeft()"
        >
          &#8592;
        </button>
        <button
          class="absolute right-4 top-1/2 -translate-y-1/2 bg-white p-4 rounded-full shadow hover:bg-gray-200 transition z-10"
          onclick="scrollRight()"
        >
          &#8594;
        </button>
      </div>
    </div>
  </section>

  <!-- Lightbox -->
  <div
    id="lightbox"
    class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 hidden"
    onclick="closeFullscreen()"
  >
    <img id="lightbox-image" src="" alt="Fullscreen Image" class="max-w-full max-h-full" />
  </div>
</Layout>

<script>
  function scrollLeft() {
    document.getElementById('gallery').scrollBy({
      left: -400,
      behavior: 'smooth',
    });
  }

  function scrollRight() {
    document.getElementById('gallery').scrollBy({
      left: 400,
      behavior: 'smooth',
    });
  }

  function openFullscreen(image) {
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightbox-image');
    if (lightboxImage instanceof HTMLImageElement) {
      lightboxImage.src = image;
    }
    lightbox.classList.remove('hidden');
  }

  function closeFullscreen() {
    const lightbox = document.getElementById('lightbox');
    lightbox.classList.add('hidden');
  }
</script>
